<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ColorNotePlus" parent="Theme.MaterialComponents.NoActionBar">

        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/purple_500</item>

        <item name="colorPrimaryVariant">@color/grey_spanish</item>

        <!-- unknown -->
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->

        <!-- Button, FAB, Cursor etc ... -->
        <item name="colorSecondary">@color/grey_spanish</item>

        <item name="colorSecondaryVariant">@color/teal_700</item>

        <!-- text, icon and button vectors-->
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- app Font -->
        <item name="fontFamily">@font/alegreya</item>
    </style>

    <style name="NoteRed" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/red_imperial</item>

        <item name="colorPrimaryVariant">@color/red_imperial</item>

        <!-- unknown -->
        <item name="colorOnPrimary">@color/red_imperial_darker</item>

        <!-- Secondary brand color. -->

        <!-- Button, FAB, Cursor etc ... -->
        <item name="colorSecondary">@color/red_imperial_dark</item>

        <item name="colorSecondaryVariant">@color/red_imperial</item>

        <!-- text, icon and button vectors-->
        <item name="colorOnSecondary">@color/red_imperial_lighter</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/red_imperial</item>
    </style>

    <style name="ActivityBackgroundStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="HintTextStyle">
        <item name="hintTextColor">@color/grey_dark_sonic_silver</item>
    </style>

    <style name="ToolbarStyle">
