<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ColorNotePlus" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
            <item name="colorPrimary">@color/purple_500</item>
            <item name="colorPrimaryVariant">@color/grey_spanish</item>
            <!-- unknown -->
            <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
            <!-- Button, FAB, Cursor etc ... -->
            <item name="colorSecondary">@color/grey_spanish</item>
            <item name="colorSecondaryVariant">@color/teal_700</item>
            <!-- text, icon and button vectors-->
            <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- app Font -->
        <item name="fontFamily">@font/alegreya</item>
    </style>

