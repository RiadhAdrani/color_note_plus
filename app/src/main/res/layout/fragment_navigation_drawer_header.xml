<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/fragment_background"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:gravity="bottom"
    android:padding="16dp">

    <ImageView
        android:id="@+id/fragment_user_icon"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginVertical="8dp"
        android:src="@drawable/ic_color_noter"/>
    <TextView
        android:id="@+id/fragment_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_user_name"
        />
    <TextView
        android:id="@+id/fragment_user_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/no_user_email"
        />


</LinearLayout>