<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="4dp">

    <CheckBox
        android:id="@+id/item_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginVertical="4dp"
        android:layout_marginHorizontal="4dp"
        />

    <EditText
        android:id="@+id/item_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/item_add"
        app:layout_constraintLeft_toRightOf="@id/item_check_box"
        app:layout_constraintBottom_toTopOf="@id/item_priority"
        android:maxLength="@integer/check_list_item_max_length"
        android:hint="@string/new_item"
        android:textStyle="bold"
        android:layout_marginStart="4dp"
        android:paddingHorizontal="4dp"
        android:layout_marginEnd="2dp"
        android:autofillHints="@string/new_item"
        android:inputType="textCapSentences|textMultiLine" />

    <ImageButton
        android:id="@+id/item_add"
        android:layout_width="50dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@id/item_title"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_add"
        android:contentDescription="@string/note_color"
        style="@style/ColorPaletteStyle"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="2dp"
        android:layout_marginVertical="4dp"/>

    <ImageButton
        android:id="@+id/item_delete"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/item_add"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        android:src="@drawable/ic_delete"
        android:contentDescription="@string/note_color"
        style="@style/ColorPaletteStyle"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"/>

    <ImageButton
        android:id="@+id/item_priority"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/item_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        android:src="@drawable/ic_priority"
        android:contentDescription="@string/note_color"
        style="@style/ColorPaletteStyle"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"/>

    <ImageButton
        android:id="@+id/item_due_time"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@id/item_priority"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_title"
        android:src="@drawable/ic_alarm_add"
        android:contentDescription="@string/note_color"
        style="@style/ColorPaletteStyle"
        android:layout_marginHorizontal="4dp"
        android:layout_marginBottom="4dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>